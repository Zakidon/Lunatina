---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { slugify } from '../../../utils/slugify';

export const prerender = true;

export async function getStaticPaths() {
  const posts = (await getCollection('blog')) || [];
  const tags = [...new Set(posts.flatMap(post => post.data.tags ?? []))];

  return tags.map(tag => ({
    params: { tag: slugify(tag) },
    props: { tag, posts: posts.filter(post => (post.data.tags ?? []).includes(tag)) },
  }));
}

interface Props {
  tag: string;
  posts: Array<{
    slug: string;
    data: {
      title: string;
      description?: string;
      tags?: string[];
      image?: string;
      date?: Date;
      category?: string;
      musicUrl?: string;
    };
  }>;
}

const { tag, posts } = Astro.props;
console.log('Tag page posts:', posts.length, posts.map(p => p.data.title)); // Отладка
const tags = [...new Set(posts.flatMap(post => post.data.tags ?? []))];
const tagMap = tags.reduce((acc: Record<string, string>, t) => {
  acc[slugify(t)] = t;
  return acc;
}, {});
---

<Layout title={`Блог | ${tagMap[tag] || tag}`} description={`Посты по тегу ${tagMap[tag] || tag}`}>
  <main class="container py-12">
    <h1 class="text-4xl mb-8">Блог | {tagMap[tag] || tag}</h1>
    <nav class="flex flex-wrap gap-2 mb-8">
      <a href="/Lunatina/blog" class="tag">Все</a>
      {tags.map(t => (
        <a href={`/Lunatina/blog/tag/${slugify(t)}`} class="tag">{t}</a>
      ))}
    </nav>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {posts.length ? (
        posts.map(post => (
          <a
            href={`/Lunatina/blog/${post.slug}`}
            class="block p-6 bg-gradient-to-br from-emerald-50 to-purple-50 dark:bg-gradient-to-br dark:from-emerald-900 dark:to-purple-900 rounded-lg shadow-sm hover:shadow-md transition"
          >
            <img
              src={post.data.image || '/Lunatina/images/placeholder.jpg'}
              alt={post.data.title}
              class="w-full h-48 object-cover rounded-lg mb-4"
            />
            <h2 class="text-xl font-semibold mb-2">{post.data.title}</h2>
            <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-3">{post.data.description || 'Нет описания'}</p>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Теги: {post.data.tags?.join(', ') || 'Нет тегов'}</p>
          </a>
        ))
      ) : (
        <p>Нет постов для тега {tagMap[tag] || tag}.</p>
      )}
    </div>
  </main>
</Layout>